@model IEnumerable<DailyShop.Areas.Admin.Models.Product>

@{

    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<h1> Danh sách sản phẩm</h1>
<ul class="nav nav-tabs aa-products-tab">
    <li class="active"><a href="#men" data-toggle="tab">Men</a></li>
    <li><a href="#women" data-toggle="tab">Women</a></li>
    <li><a href="#sports" data-toggle="tab">Sports</a></li>
    <li><a href="#electronics" data-toggle="tab">Electronics</a></li>
</ul>
<div class="tab-content">
    <!-- Start men product category -->
    <div class="tab-pane fade" id="men">
        <ul class="aa-product-catg">
            <!-- start single product item -->
            @foreach (var p in Model)
            {
                <!-- start single product item -->
                <li>
                    <figure>
                        <a asp-action="Detail" asp-controller="Products" asp-route-id="@p.Id" class="aa-product-img"><img src="~/image/product/@p.Image" width="300" height="300" object-fit="scale-down" alt="polo shirt img"></a>
                        <figcaption>
                            <h4 class="aa-product-title"><a href="#">@p.ProductName</a></h4>
                            <span class="aa-product-price"> <span style="font-weight:900; color:crimson">VNĐ</span>@p.Price.ToString("#,##0")</span>
                        </figcaption>
                    </figure>
                    <div class="aa-product-hvr-content">
                        <a href="#" data-toggle="tooltip" data-placement="top" title="Add to Wishlist"><span class="fa fa-heart-o"></span></a>
                        <a href="#" data-toggle="tooltip" data-placement="top" title="Compare"><span class="fa fa-exchange"></span></a>
                        <a href="#" data-toggle2="tooltip" data-placement="top" title="Quick View" data-toggle="modal" data-target="#quick-view-modal"><span class="fa fa-search"></span></a>
                    </div>
                    <!-- product badge -->
                    <span style="background-color:green" class="aa-badge aa-sold-out" href="#">Sale!</span>
                </li>

            }


        </ul>

    </div>

</div>
