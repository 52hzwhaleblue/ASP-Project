                <div class="checkbox">
                    <label>
                        <input asp-for="AccountStatus" /> @Html.DisplayNameFor(model => model.AccountStatus)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
